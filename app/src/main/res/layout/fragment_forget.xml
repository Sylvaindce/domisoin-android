<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sylvain.domisoin.Fragments.Connexion.LoginFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:weightSum="1"
        android:orientation="vertical"
        android:id="@+id/loginfragment_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mot de passe oublié?"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="22sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="top"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Renseignez votre Email."
                    android:textColor="#b0bec5" />

                <EditText
                    android:id="@+id/loginEdit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_weight="0.09"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:hint="Votre email"
                    android:inputType="text"
                    android:textColor="#212121" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:gravity="top"
            android:paddingRight="0dp">

            <Button
                android:id="@+id/forgot_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/signin_rounded_button"
                android:padding="20dp"
                android:layout_gravity="end"
                android:text="réinitialiser "
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>
