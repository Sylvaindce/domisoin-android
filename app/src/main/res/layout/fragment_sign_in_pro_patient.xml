<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ourWhite"
    tools:context="com.sylvain.domisoin.Fragments.Connexion.SignInProPatientFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qui es-tu ?"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Un conseil, choisi bien ;)"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:id="@+id/signin_cust"
                android:background="@drawable/signin_rounded_button"
                android:text="Patient"
                android:layout_margin="16dp"
                android:padding="20dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:id="@+id/signin_pro"
                android:background="@drawable/signin_rounded_button"
                android:text="Professionnel"
                android:layout_margin="16dp"
                android:padding="20dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
