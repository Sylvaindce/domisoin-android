<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sylvain.domisoin.Fragments.Connexion.InscriptionChoice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:weightSum="1"
        android:orientation="vertical"
        android:id="@+id/loginfragment_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Veuillez choisir"
                android:textColor="#000000"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_margin="8dp"

                android:gravity="center">

            <Button
                android:id="@+id/choice_button_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"

                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:text="Je suis un pro"
                android:textColor="@color/ourWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_margin="8dp"

                android:gravity="center">


            <Button
                android:id="@+id/choice_button_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:elevation="0dp"
                android:padding="20dp"
                android:text="Je suis un patient"
                android:textColor="@color/ourWhite"
                android:textSize="18sp"
                android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>

