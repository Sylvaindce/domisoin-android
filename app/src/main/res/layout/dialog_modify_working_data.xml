<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sylvain.domisoin.Fragments.Connexion.SigninProFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="15dp">


                <Button
                    android:id="@+id/close_button_modify_working_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@color/ourWhite"
                    android:text="X"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Modifier mes crÃ©neaux horaires"
                    android:textColor="#000000"
                    android:textSize="16sp" />


                <Switch
                    android:id="@+id/indisponible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Je suis indisponible"
                    android:textColor="@color/colorPrimary" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="top"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Choisissez vos jours de travail"
                        android:textColor="#b0bec5" />

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="0dp"
                        android:gravity="start">

                        <CheckBox
                            android:id="@+id/wd_0"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="40dp"
                            android:paddingLeft="-20dp"
                            android:text="L" />

                        <CheckBox
                            android:id="@+id/wd_1"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="40dp"
                            android:paddingLeft="-20dp"
                            android:text="M" />

                        <CheckBox
                            android:id="@+id/wd_2"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="40dp"
                            android:paddingLeft="-20dp"
                            android:text="M" />

                        <CheckBox
                            android:id="@+id/wd_3"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="40dp"
                            android:paddingLeft="-20dp"
                            android:text="J" />

                        <CheckBox
                            android:id="@+id/wd_4"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="40dp"
                            android:paddingLeft="-20dp"
                            android:text="V" />

                        <CheckBox
                            android:id="@+id/wd_5"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="40dp"
                            android:paddingLeft="-20dp"
                            android:text="S" />

                        <CheckBox
                            android:id="@+id/wd_6"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="40dp"
                            android:paddingLeft="-20dp"
                            android:text="D" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:text="Horaires d'ouvertures"
                        android:textColor="#b0bec5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/begin_hour_pro_wd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:text="00:00"
                            android:textAlignment="center" />

                        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                            android:id="@+id/rangeSeekbar_wd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="0.2"
                            app:bar_color="@color/whitegray"
                            app:bar_highlight_color="@color/colorPrimary"
                            app:left_thumb_color="@color/colorPrimary"
                            app:right_thumb_color="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/end_hour_pro_wd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:text="24:00"
                            android:textAlignment="center" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/validate_wd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:gravity="center"
                        android:background="@drawable/signin_rounded_button"
                        android:text="Valider"
                        android:textColor="@color/ourWhite"
                        android:enabled="true"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
