<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/ourWhite">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="20dp">


        <TextView
            android:id="@+id/label_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_desc"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/label_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_desc"
            android:text="Type"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_type"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/label_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_type"
            android:text="Praticien"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_author"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/label_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_author"
            android:text="Client"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_client"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/label_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_client"
            android:text="Date"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_date"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/label_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_date"
            android:text="Lieu"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_location"
            android:layout_marginBottom="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_location"
            android:gravity="center"
            android:id="@+id/validate_container">

            <Button
                android:id="@+id/validate_appointment_more_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:background="@drawable/signin_rounded_button_green"
                android:text="Valider"
                android:textColor="@color/ourWhite"
                android:visibility="gone"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/validate_container"
            android:gravity="center">
            <Button
                android:id="@+id/delete_appointment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/signin_rounded_button"
                android:text="Annuler"
                android:textStyle="bold"
                android:textColor="@color/ourWhite" />


            <Button
                android:id="@+id/close_appointment_more_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:layout_toRightOf="@id/delete_appointment_button"
                android:background="@drawable/signin_rounded_button2"
                android:text="Fermer"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>