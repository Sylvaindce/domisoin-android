<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sylvain.domisoin.Fragments.Connexion.ParentFragmentSignInPro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="15dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:orientation="vertical">

            <EditText
                android:id="@+id/emailpro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="40dp"
                android:hint="Votre adresse email"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/passwordpro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="40dp"
                android:hint="CrÃ©ez votre mot de passe"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/cpasswordpro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="40dp"
                android:hint="Confirmez votre mot de passe."
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true" />

        </LinearLayout>




    </LinearLayout>

</FrameLayout>
