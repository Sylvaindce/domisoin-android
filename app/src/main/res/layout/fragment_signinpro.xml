                        android:paddingLeft="-20dp"
                        android:text="J" />

                    <CheckBox
                        android:id="@+id/wd4"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="40dp"
                        android:paddingLeft="-20dp"
                        android:text="V" />

                    <CheckBox
                        android:id="@+id/wd5"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="40dp"
                        android:paddingLeft="-20dp"
                        android:text="S" />

                    <CheckBox
                        android:id="@+id/wd6"
