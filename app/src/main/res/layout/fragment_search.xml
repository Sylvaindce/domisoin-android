<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.sylvain.domisoin.DataBind.userInfo" />
    </data>

    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ourWhite"
        tools:context="com.sylvain.domisoin.Fragments.SearchFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:id="@+id/mapFragment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    android:weightSum="4">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="0dp"
                        android:background="#FFFFFF"
                        android:padding="20dp"
                        android:hint="Recherche"
                        android:id="@+id/search_edittext"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/validate_search_button"
                        android:padding="20dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_search_white_24dp"
                        android:layout_weight="3"/>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listView_pro">

                </ListView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:addTextChangedListener="@{user.watcher}"
                    android:visibility="invisible"
                    android:text="@{user.search}" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</layout>